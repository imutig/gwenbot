# Nom d'utilisateur du bot Twitch
TWITCH_USERNAME=gwenbot

# Token OAuth du bot (LEGACY - plus utilisé depuis la migration EventSub)
# TWITCH_OAUTH_TOKEN=oauth:xxxxxxxxxxxxxxxxxxxxxxxxxx

# Chaîne Twitch à rejoindre (sans le #)
TWITCH_CHANNEL=xsgwen

# Twitch API Credentials (obligatoire)
TWITCH_CLIENT_ID=your_client_id
TWITCH_CLIENT_SECRET=your_client_secret

# URL de redirection OAuth (change en production)
TWITCH_REDIRECT_URI=http://localhost:3000/auth/callback

# IDs utilisateur (optionnel - récupérés automatiquement au démarrage)
# TWITCH_BOT_USER_ID=
# TWITCH_BROADCASTER_ID=

# Base de données PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/gwenbot

# Session secret (généré automatiquement si absent)
# SESSION_SECRET=

# Mode maintenance (optionnel)
# MAINTENANCE_MODE=true
# MAINTENANCE_BYPASS_CODE=ton-code-secret


