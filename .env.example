# ===========================================
# GwenBot Environment Variables
# Copy this to .env and fill in your values
# ===========================================

# Twitch Bot Configuration
TWITCH_USERNAME=gwenbot
TWITCH_CHANNEL=xsgwen
TWITCH_CLIENT_ID=your_client_id
TWITCH_CLIENT_SECRET=your_client_secret
TWITCH_REDIRECT_URI=https://your-domain.railway.app/auth/callback

# Supabase Configuration (REQUIRED)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Server Configuration
PORT=3000
NODE_ENV=production

# Optional: Twitch Bot/Broadcaster IDs (auto-detected if not set)
# TWITCH_BOT_USER_ID=
# TWITCH_BROADCASTER_ID=

# Optional: Maintenance Mode
# MAINTENANCE_MODE=true
# MAINTENANCE_BYPASS_CODE=your_secret_code

# Discord Bot (for Spotify presence detection)
# Create a bot at https://discord.com/developers/applications
# IMPORTANT: Enable "Presence Intent" in Bot settings!
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_GUILD_ID=your_server_id
DISCORD_STREAMER_ID=streamer_discord_user_id
